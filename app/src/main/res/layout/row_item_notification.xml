<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_item_notification_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/row_item_notification_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/row_item_notification_circle_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_circle_24"
            app:tint="#3a70ea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/row_item_notification_circle_rl"
            android:layout_toEndOf="@id/row_item_notification_circle_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_item_notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_regular"
                android:text="Your password has been successfully changed."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/row_item_notification_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lexend_light"
                android:text="Your password has been successfully changed."
                android:textColor="#6c6c6c"
                android:textSize="11sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/row_item_notification_circle_rl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_circle_24"
            android:backgroundTint="#3a70ea">

            <ImageView
                android:id="@+id/row_item_notification_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_notifications_24"
                app:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#f5f5f5" />

</LinearLayout>
