<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/marker_info_ll"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button_4px"
        android:backgroundTint="#10561fff"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_regular"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Rama Sachdeva"
        android:textColor="#561fff"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_view_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_button_4px"
        android:backgroundTint="#1030b856"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_regular"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Partner"
        android:textColor="#30b856"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_view_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Rating: 3" />

</LinearLayout>