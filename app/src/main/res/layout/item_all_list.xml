<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_all_clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_button_4px"
    android:backgroundTint="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_button_4px"
        android:fontFamily="@font/lexend_light"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:textColor="#30b856"
        android:backgroundTint="#1030b856"
        android:paddingEnd="15dp"
        android:text="Order"
        android:paddingBottom="10dp"
        android:textSize="10sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_profile_cv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/item_type_tv"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_profile_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dummyuser" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_type_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/item_profile_cv"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:text="Name"
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Nikhar Sachdeva"
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_address_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:text="Address"
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Akshya Nagar 1st Block 1st Cross, Rammurthy nagar, Bangalore-560016"
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>