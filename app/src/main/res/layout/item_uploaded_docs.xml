<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_button_8px"
    android:backgroundTint="#e8f1fc"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_doc_img_cv"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/item_doc_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/item_doc_del_iv"
        android:layout_toEndOf="@id/item_doc_img_cv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_doc_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/lexend_regular"
            android:maxLines="2"
            android:text="IMG_2019021100.jpeg"
            android:textColor="@color/hintColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_doc_sts_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_regular"
            android:text="Uploaded"
            android:textColor="@color/colorDashEffect"
            android:textSize="10sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/item_doc_del_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/delnew" />

</RelativeLayout>