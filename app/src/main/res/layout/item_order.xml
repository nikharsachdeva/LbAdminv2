<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_item_order_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_4px"
        android:backgroundTint="#10ff8935"
        android:padding="10dp">

        <TextView
            android:id="@+id/row_item_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/lexend_medium"
            android:maxLines="1"
            android:text="#ZUS23SSZYAB8"
            android:textColor="#ff8935"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_item_order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:fontFamily="@font/lexend_medium"
            android:maxLines="1"
            android:text="2022-05-18 04:55PM"
            android:textColor="@color/colorHeading"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_order_id"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_medium"
            android:text="Nikhar Sachdeva"
            android:textColor="@color/hintColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/row_item_order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_order_name"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lexend_medium"
            android:text="Hno 243, Gali Number 1, New defence colony, Railway road, Muradnagar , 201206"
            android:textColor="@color/colorHeading"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/row_item_service_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_order_address"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_vendor_services" />

    </RelativeLayout>

</RelativeLayout>