<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_item_activity_root_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_bg_4px"
    android:backgroundTint="#10ff8935"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row_item_activity_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/row_item_activity_date_time"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:text="Activity Id : "
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_item_activity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="#BK3JZZ81KDM"
                android:textColor="@color/hintColor"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/row_item_activity_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/lexend_medium"
            android:maxLines="1"
            android:text="2022-05-18 04:55PM"
            android:textColor="@color/colorHeading"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/row_item_activity_operation_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_activity_order_id"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:text="Operation Performed : "
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_item_activity_operation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Order Accepted"
                android:textColor="@color/hintColor"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_activity_operation_ll"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:text="Description : "
                android:textColor="@color/colorHeading"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_item_activity_operation_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lexend_medium"
                android:text="Order No #ABD38H1S7 of Mr. Nikhar Sachdeva, For Laundry Accepted."
                android:textColor="@color/hintColor"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>