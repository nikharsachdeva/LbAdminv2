<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_marginEnd="20dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/concern_bg"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/item_concern_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/item_concern_attachment"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_concern_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/lexend_medium"
                android:maxLines="1"
                android:textColor="@color/hintColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_concern_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/lexend_regular"
                android:maxLines="4"
                android:textColor="@color/hintColor"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_concern_attachment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toStartOf="@id/item_note_concern_fig"
            android:layout_alignParentBottom="true"
            android:src="@drawable/attach_file_24" />

        <TextView
            android:id="@+id/item_note_concern_fig"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:fontFamily="@font/lexend_regular"
            android:textColor="@color/hintColor"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>